# Run only once unless you wanna reset the database
rrdtool create /home/chprobe/udpdb-ds_$(hostname -d).rrd \
--step 360 \
DS:ds_jitter:GAUGE:720:0:10000000 \
DS:ds_pl:GAUGE:720:0:100 \
DS:ds_bitrate:GAUGE:720:0:1000 \
RRA:MAX:0.5:1:15500 \

rrdtool create /home/chprobe/udpdb-us_$(hostname -d).rrd \
--step 420 \
DS:us_jitter:GAUGE:800:0:10000000 \
DS:us_pl:GAUGE:800:0:100 \
DS:us_bitrate:GAUGE:800:0:1000 \
RRA:MAX:0.5:1:15500 \
